<body class="gray-bg pace-done">
  <div class="middle-box text-center loginscreen  animated fadeInDown">
    <div class="authform">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true, :role => 'form'}) do |f| %>
        <div>
          <h1 class="logo-name">FnF</h1>
        </div>
        <h3>Register to fnf</h3>
        <p>Create account to see it in action.</p>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: "surname" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, class: 'form-control', placeholder: "email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: 'form-control', placeholder: "password" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "password confirmation" %>
        </div>
         <%= f.submit 'Register', :class => 'btn btn-primary block full-width m-b  right' %>
      <% end %>
    </div>
    <p class="m-t"> <small>zettheme Inc. we app framework &copy; 2015</small> </p>
  </div>
</body>
